<p id="notice"><%= notice %></p>

<h1>Pilot Teams</h1>

<form method="GET" action="/pilot_teams">
  Nombre o Apellido del Piloto: <input type="text" name="filter" />
  Equipo: <input type="text" name="filter2" />
  Marca: <input type="text" name="filter3" />
  <input type="submit" />
</form>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th>Team</th>
      <th>Pilot</th>
      <th>Championship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pilot_teams.each do |pilot_team| %>
      <tr>
        <td><%= pilot_team.team.name %></td>
        <td><%= pilot_team.pilot.full_name %></td>
        <td><%= pilot_team.championship.name %></td>
        <td><%= link_to 'Show', pilot_team %></td>
        <td><%= link_to 'Edit', edit_pilot_team_path(pilot_team) %></td>
        <td><%= link_to 'Destroy', pilot_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


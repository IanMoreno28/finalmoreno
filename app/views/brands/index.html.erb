<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<form method="GET" action="/brands">
  <select name="brand_id">
    <option value="">Seleccione una Marca</option>
    <option value="1">Ford	</option>
    <option value="2">Honda</option>
    <option value="3">VW</option>
    <option value="4">Lotus</option>
    <option value="5">Audi</option>
  </select>
  <input type="submit" />
</form>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


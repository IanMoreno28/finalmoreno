<p id="notice"><%= notice %></p>

<h1>Races</h1>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th><%= link_to "Nombre", races_path(:sort => true, :by => "name", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "Circuito", races_path(:sort => true, :by => "circuit_id", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "Campeonato", races_path(:sort => true, :by => "championship_id", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= race.name %></td>
        <td><%= race.circuit_id %></td>
        <td><%= race.championship_id %></td>
        <td><%= link_to 'Show', race %></td>
        <td><%= link_to 'Edit', edit_race_path(race) %></td>
        <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<form method="GET" action="/Teams">
  <select name="filter>
    <option value="">Seleccione una Marca
    <option value="1">Ford-team	</option>
    <option value="2">Audi-team	</option>
    <option value="3">Lotus-team</option>
  </select>
  <input type="submit" />
</form>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.brand_id %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

